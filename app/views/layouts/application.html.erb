      <li class="nav-item active">
        <a class="nav-link" href="<%= root_path %>">Home</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="<%= events_path %>"> All_Events</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="<%= new_event_path %>">New_Event</a>
      </li>
      
      <li class="nav-item">
